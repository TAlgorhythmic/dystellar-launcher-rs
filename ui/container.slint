export component Container inherits Rectangle {
	background: #515151;
    border-color: @linear-gradient(0deg, #333333 0%, #797979 100%);
	border-radius: 12px;
	border-width: 1px;
	drop-shadow-color: black;
	drop-shadow-blur: 6px;
	drop-shadow-offset-y: 2px;

	animate background { duration: 190ms; easing: ease-in-out; }

	@children
}
