export enum TaskState { waiting, in_progress, success, failed }
export enum TaskType { download, integrity_check, operation, other }

export struct TaskData {
	name: string,
	details: string,
	progress: float,
	state: TaskState,
}

export struct TasksGroup {
	name: string,
	tasks: [TaskData],
	type: TaskType
}

export struct Content {
	img: image,
	link: string,
	text: string
}

export struct Mod {
	name: string,
	description: string,
	version: string,
	enabled: bool,
	default: bool,
	author: string,
	url: string,
	image: image,
	loading: bool
}
